{
  "manifest_version": 2,

  "name": "Cards Board - Chrome Package",
  "short_name": "CB - Chrome",
  "description": "Adds a time, apps and Google services card to Cards Board",
  "version": "1.1",
  "author": "Matthew M Morrow",

  "content_security_policy": "script-src 'self' https://encrypted.google.com; object-src 'self'",
  "permissions": [
    "tabs",
	"storage",
	"management",
	"topSites"
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "background": {
    "scripts": ["jquery-1.10.2.min.js", "card.js", "cards/baseExtension.js", "cards/time.js", "cards/apps.js", "cards/google.js", "cards/register.js"]
  }
}